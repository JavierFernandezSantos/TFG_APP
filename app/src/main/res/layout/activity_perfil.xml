<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilActivity">

    <TextView
        android:id="@+id/tvInfoCorreoTtle"
        android:layout_width="371dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:text="Correo electrónico:"
        android:textColor="#1E1E20"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvTituloPerfil"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/tvTituloPerfil"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloPerfil" />

    <TextView
        android:id="@+id/tvTituloPerfil"
        android:layout_width="282dp"
        android:layout_height="54dp"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="PERFIL"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#962715"
        android:textIsSelectable="false"
        android:textSize="38sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/layout_border_fondo_rojo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="174dp"
            android:layout_height="60dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:src="@drawable/logo_sin_fondo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="117dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="Eliminar usuario"
            android:textColor="@color/fondo_rojo"
            android:textSize="12sp"
            android:textStyle="bold"
            app:backgroundTint="#FBFBFB"
            app:cornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvInfoCorreo"
        android:layout_width="371dp"
        android:layout_height="32dp"
        android:text="info correo electrónico"
        android:textColor="#962715"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvInfoCorreoTtle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvInfoCorreoTtle"
        app:layout_constraintTop_toBottomOf="@+id/tvInfoCorreoTtle" />

    <TextView
        android:id="@+id/tvInfoNombreTitle"
        android:layout_width="371dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:text="Nombre:"
        android:textColor="#1E1E20"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvInfoCorreoTtle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvInfoCorreoTtle"
        app:layout_constraintTop_toBottomOf="@+id/tvInfoCorreo" />

    <TextView
        android:id="@+id/tvInfoNombre"
        android:layout_width="371dp"
        android:layout_height="32dp"
        android:text="info nombre"
        android:textColor="#962715"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvInfoNombreTitle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvInfoNombreTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvInfoNombreTitle" />

    <TextView
        android:id="@+id/tvInfoApellidos"
        android:layout_width="371dp"
        android:layout_height="32dp"
        android:text="info apellidos"
        android:textColor="#962715"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvInfoNombreTtle"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tvInfoNombreTtle"
        app:layout_constraintTop_toBottomOf="@+id/tvInfoNombreTtle" />

    <TextView
        android:id="@+id/tvInfoNombreTtle"
        android:layout_width="371dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:text="Apellidos:"
        android:textColor="#1E1E20"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvInfoNombreTitle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvInfoNombreTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvInfoNombre" />

    <TextView
        android:id="@+id/tvInfoMonedasTtle"
        android:layout_width="371dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:text="Puntos:"
        android:textColor="#1E1E20"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvInfoNombreTtle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvInfoNombreTtle"
        app:layout_constraintTop_toBottomOf="@+id/tvInfoApellidos" />

    <TextView
        android:id="@+id/tvInfoPuntos"
        android:layout_width="371dp"
        android:layout_height="32dp"
        android:text="info numero de puntos"
        android:textColor="#962715"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvInfoMonedasTtle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvInfoMonedasTtle"
        app:layout_constraintTop_toBottomOf="@+id/tvInfoMonedasTtle" />

    <Button
        android:id="@+id/btnCerrarSesion"
        android:layout_width="252dp"
        android:layout_height="54dp"
        android:layout_marginTop="60dp"
        android:text="Cerrar sesión"
        app:backgroundTint="#962715"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
        app:layout_constraintEnd_toEndOf="@+id/tvInfoPuntos"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@+id/tvInfoPuntos"
        app:layout_constraintTop_toBottomOf="@+id/tvInfoPuntos"
        app:layout_constraintVertical_bias="0.505" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/layout_border_fondo_rojo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnHome"
            android:layout_width="102dp"
            android:layout_height="60dp"
            android:background="@drawable/hogar"
            android:scaleX="0.4"
            android:scaleY="0.7"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/btnTienda"
            android:layout_width="103dp"
            android:layout_height="60dp"
            android:background="@drawable/carro"
            android:scaleX="0.4"
            android:scaleY="0.7"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnHome"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/btnQuiz"
            android:layout_width="103dp"
            android:layout_height="60dp"
            android:background="@drawable/quiz"
            android:scaleX="0.4"
            android:scaleY="0.7"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnTienda"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/btnPerfil"
            android:layout_width="102dp"
            android:layout_height="60dp"
            android:background="@drawable/perfil"
            android:scaleX="0.4"
            android:scaleY="0.7"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnQuiz"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6"
            tools:ignore="SpeakableTextPresentCheck" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>