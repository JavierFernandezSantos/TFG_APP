<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPassActivity">

    <EditText
        android:id="@+id/tvEmailResetPass2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="Email cuenta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtCodigoPorEmail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtCodigoPorEmail"
        app:layout_constraintTop_toBottomOf="@+id/txtCodigoPorEmail"
        app:layout_constraintVertical_bias="0.137" />

    <EditText
        android:id="@+id/txtNuevaPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:backgroundTint="#962715"
        android:ems="10"
        android:hint="Nueva contraseña"
        android:inputType="textPassword"
        android:textColor="#1E1E20"
        app:layout_constraintEnd_toEndOf="@+id/tvEmailResetPass2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvEmailResetPass2"
        app:layout_constraintTop_toBottomOf="@+id/tvEmailResetPass2" />

    <Button
        android:id="@+id/btEnviarEmailUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar correo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvEmailResetPass"
        app:layout_constraintStart_toStartOf="@+id/tvEmailResetPass"
        app:layout_constraintTop_toBottomOf="@+id/tvEmailResetPass"
        app:layout_constraintVertical_bias="0.063" />

    <EditText
        android:id="@+id/tvEmailResetPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="Email a enviar correo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.144" />

    <EditText
        android:id="@+id/txtCodigoPorEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Codigo enviado por email"
        app:layout_constraintEnd_toEndOf="@+id/btEnviarEmailUsuario"
        app:layout_constraintStart_toStartOf="@+id/btEnviarEmailUsuario"
        app:layout_constraintTop_toBottomOf="@+id/btEnviarEmailUsuario" />

    <Button
        android:id="@+id/btCambiarPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="104dp"
        android:text="Cambiar contraseña"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtNuevaPass"
        app:layout_constraintStart_toStartOf="@+id/txtNuevaPass"
        app:layout_constraintTop_toBottomOf="@+id/txtNuevaPass" />

</androidx.constraintlayout.widget.ConstraintLayout>