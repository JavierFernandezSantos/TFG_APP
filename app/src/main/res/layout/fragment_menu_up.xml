<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuUpFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#962715">

        <TextView
            android:id="@+id/tvTituloMenu"
            android:layout_width="175dp"
            android:layout_height="54dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="QUIZBET"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textIsSelectable="false"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.454" />

        <TextView
            android:id="@+id/tvUsuario"
            android:layout_width="100dp"
            android:layout_height="26dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="usuario"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textIsSelectable="false"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvTituloMenu"
            app:layout_constraintStart_toEndOf="@+id/tvTituloMenu"
            app:layout_constraintTop_toTopOf="@+id/tvTituloMenu" />

        <TextView
            android:id="@+id/tvUsuario2"
            android:layout_width="88dp"
            android:layout_height="26dp"
            android:gravity="center_vertical"
            android:text="monedas"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textIsSelectable="false"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvUsuario"
            app:layout_constraintStart_toEndOf="@+id/tvUsuario"
            app:layout_constraintTop_toTopOf="@+id/tvUsuario"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>