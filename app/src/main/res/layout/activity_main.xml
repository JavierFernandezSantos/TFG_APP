<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context=".LoginActivity"
    tools:layout_editor_absoluteX="5dp"
    tools:layout_editor_absoluteY="0dp">

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="363dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#962715"
        android:ems="10"
        android:hint="Correo electrónico"
        android:inputType="textEmailAddress"
        android:textColor="#1E1E20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <EditText
        android:id="@+id/etPassWord"
        android:layout_width="363dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#962715"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:textColor="#1E1E20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etEmail"
        app:layout_constraintTop_toBottomOf="@+id/etEmail" />

    <TextView
        android:id="@+id/tvOlvidadoContraseña"
        android:layout_width="288dp"
        android:layout_height="28dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="¿Has olvidado tu contraseña?"
        android:textColor="#962715"
        app:layout_constraintEnd_toEndOf="@+id/etPassWord"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/etPassWord"
        app:layout_constraintTop_toBottomOf="@+id/etPassWord" />

    <TextView
        android:id="@+id/tvRegistrate"
        android:layout_width="135dp"
        android:layout_height="28dp"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:paddingLeft="5sp"
        android:singleLine="false"
        android:text="Regístrate"
        android:textColor="#962715"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvNoTienesCuenta"
        app:layout_constraintTop_toBottomOf="@+id/btnEnviar"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvNoTienesCuenta"
        android:layout_width="174dp"
        android:layout_height="28dp"
        android:layout_marginTop="24dp"
        android:gravity="right|center_vertical"
        android:text="¿No tienes una cuenta?"
        android:textColor="#1E1E20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnEnviar"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="@+id/btnEnviar"
        app:layout_constraintTop_toBottomOf="@+id/btnEnviar"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="316dp"
        android:layout_height="61dp"
        android:layout_marginTop="124dp"
        android:text="Entrar"
        app:backgroundTint="#962715"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/etPassWord"
        app:layout_constraintHorizontal_bias="0.446"
        app:layout_constraintStart_toStartOf="@+id/etPassWord"
        app:layout_constraintTop_toBottomOf="@+id/tvOlvidadoContraseña" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="360dp"
        android:layout_height="176dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo4" />

</androidx.constraintlayout.widget.ConstraintLayout>